# Copy to .env.local and fill with your Firebase project settings
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_APP_ID=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_STORAGE_BUCKET=
# Application
VITE_APP_NAME=Nipon Payroll Pro
VITE_APP_VERSION=2.0.0
VITE_APP_ENV=development

# Supabase
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
# NOTE: Do not expose service key in client builds
VITE_SUPABASE_SERVICE_KEY=your-service-role-key

# Features
VITE_ENABLE_DEBUG=true
VITE_ENABLE_ANALYTICS=false

# Security
VITE_SESSION_TIMEOUT_MINUTES=60
VITE_MAX_LOGIN_ATTEMPTS=5

# Qatar Specific
VITE_DEFAULT_CURRENCY=QAR
VITE_DEFAULT_TIMEZONE=Asia/Qatar
VITE_WORKING_DAYS_PER_MONTH=30
VITE_OVERTIME_MULTIPLIER=1.5

# Storage
VITE_MAX_FILE_SIZE_MB=10
VITE_ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# Export
VITE_ENABLE_PDF_EXPORT=true
VITE_ENABLE_EXCEL_EXPORT=true